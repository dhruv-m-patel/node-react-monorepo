{
  "name": "node-package",
  "version": "0.0.1",
  "description": "A boilerplate node-package for writing reusable package for services",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 18",
    "npm": ">= 10",
    "yarn": ">= 3"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "test": "jest --silent",
    "test:ci": "jest --ci --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@babel/eslint-plugin": "^7.23.5",
    "@dhruv-m-patel/eslint-config-base": "workspace:^",
    "jest": "27.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "4.3.4"
  }
}
