{
  "name": "@dhruv-m-patel/packages",
  "engines": {
    "node": ">= 18",
    "yarn": ">= 3"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "cli-glob": "^0.1.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "syncpack": "^9.7.4",
    "turbo": "^1.12.2",
    "typescript": "4.3.4"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint ."
    ]
  },
  "scripts": {
    "build": "turbo run build --color",
    "ci:build": "turbo run build --no-color --no-update-notifier",
    "ci:test": "turbo run ci:test --no-color",
    "ci:lint": "eslint . && yarn prettier:verify",
    "ci:publish": "lerna publish from-package --yes",
    "test": "turbo run test",
    "lint": "eslint . && yarn prettier:verify",
    "lint:fix": "turbo run lint:fix",
    "pretest": "jest --clearCache",
    "prettier:format": "prettier --write .",
    "prettier:verify": "prettier --check .",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook"
  },
  "packageManager": "yarn@3.2.3"
}
