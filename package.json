{
  "name": "node-react-monorepo",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">= 14.15.5",
    "npm": ">= 6.14.11"
  },
  "dependencies": {
    "lerna": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "4.1.2"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint ."
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --stream",
    "clean": "lerna clean -y",
    "diff": "lerna diff",
    "publish": "lerna version --conventional-commits",
    "start": "lerna run start --stream -- -- dotenv_config_path=../../.env",
    "start-dev": "lerna run start-dev --stream -- -- dotenv_config_path=../../.env",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci --stream",
    "lint": "eslint .",
    "lint:fix": "lerna run lint:fix --stream",
    "pretest": "jest --clearCache",
    "prettier:format": "prettier --write .",
    "prettier:verify": "prettier --check .",
    "storybook": "lerna run storybook --stream",
    "build-storybook": "lerna run build-storybook --stream",
    "postinstall": "npm run bootstrap"
  }
}
