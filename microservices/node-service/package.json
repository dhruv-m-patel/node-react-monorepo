{
  "name": "node-service",
  "version": "1.0.0",
  "description": "Backend built with node, express and typescript",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/api/*.yaml build",
    "start": "node build/index.js",
    "start-dev": "ts-node src/index.ts",
    "test": "jest --runInBand",
    "test:ci": "jest --silent --ci --coverage --coverageReporters=text --coverageReporters=text-summary",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@dhruv-m-patel/express-app": "^1.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/supertest": "^2.0.11",
    "copyfiles": "^2.4.1",
    "jest": "27.0.5",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "4.3.4"
  }
}
