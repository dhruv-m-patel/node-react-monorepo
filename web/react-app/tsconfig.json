{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES2017", "DOM"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "./typings/"],
    "types": ["node", "jest"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./src/**/*.test.tsx"]
}
